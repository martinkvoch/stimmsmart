<UserControl x:Class="WpfUC.ucSegments"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WpfUC"
             mc:Ignorable="d" 
             d:DesignHeight="50" d:DesignWidth="200">
        <Grid Name="grMain">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
        <Border Grid.Column="0" Background="Black" Margin="5,0" Opacity=".1" CornerRadius="4"/>
        <Border Grid.Column="1" Background="Black" Margin="5,0" Opacity=".1" CornerRadius="4"/>
        <Border Grid.Column="2" Background="Black" Margin="5,0" Opacity=".1" CornerRadius="4"/>
        <Border Grid.Column="3" Background="Black" Margin="5,0" Opacity=".1" CornerRadius="4"/>
        <Border Grid.Column="4" Background="Black" Margin="5,0" Opacity=".1" CornerRadius="4"/>
        <Border Grid.Column="5" Background="Black" Margin="5,0" Opacity=".1" CornerRadius="4"/>
    </Grid>
</UserControl>
